@import 'kouto-swiss'
@import 'base/module'

body
  background: #f1f1f1

.container
  max-width: 500px
  margin-left: auto
  margin-right: auto

  @media screen and (max-width: 767px)
    padding: 0 15px

main
  margin-top: 30px
  margin-bottom: 30px

.page-header
  padding: 5px 0
  text-align: center
  background: $secondary-color

  h1
    color: #fff

.box
  background: #fff
  overflow: hidden
  margin-bottom: 30px
  border-radius: $border-radius-base
  box-shadow: 0 1px 1px rgba(0,0,0,0.3)

  &.subject-box
    padding: 20px

    @media screen and (max-width: 767px)
      width: 300px

    @media screen and (min-width: 768px)
      width: 500px

  .box-title
    display: block
    padding: 15px 0
    text-align: center
    background: #f8f8f8
    border-bottom: 1px solid #f1f1f1

.subject
  overflow: hidden
  padding: 20px 15px
  border-bottom: 1px solid #f1f1f1

  .subject-name
    float: left
    max-width: 75%
    line-height: 30px

  .btn-remove,
  .btn-add,
  .btn-edit
    float: right

.form-group
  padding: 15px

  &.has-error
    .form-control
      border-color: $primary-danger-color

    .error-message
      display: block

.form-label
  display: block
  margin-bottom: 10px

.form-control
  width: 100%
  min-height: 40px
  padding: 5px 10px
  transition: .3s all ease
  border-radius: $border-radius-base
  border: 1px solid saturation(#f1f1f1, 5%)

  &:focus
    outline: none
    border-color: saturation(#f1f1f1, 30%)

.form-hint
  display: block
  margin-top: 5px
  font-size: 12px

  &.error-message
    display: none
    color: $primary-danger-color

.btn
  color: #fff
  padding: 10px 15px
  transition: .3s all ease
  border-radius: $border-radius-base
  border: 1px solid saturation(#f1f1f1, 10%)

  &:disabled
    color: #ccc
    border-color: #ccc
    cursor: not-allowed

    &:hover
      color: #ccc
      background: #fff
      border-color: #ccc

.btn-outline
  background: #fff
  border-width: 2px
  color: $primary-color
  border-color: $primary-color

  &:hover
    color: #fff
    background: $primary-color

.btn-block
  width: 100%
  display: block

.btn-remove
  padding: 0
  width: 30px
  height: 30px
  color: #fff
  border: none
  line-height: 32px
  text-align: center
  border-radius: 50%

.btn-remove
  background: $primary-danger-color

  &:hover
    background: $secondary-danger-color

.btn-edit
  border: none
  height: 30px
  padding: 0 10px
  margin-right: 10px
  border-radius: 20px
  background: $primary-color

.btn-subject
  width: 100%
  height: 50px
  display: block
  margin-bottom: 15px

.notification
  right: 20px
  bottom: -100px
  padding: 20px
  position: fixed
  transition: .6s all ease
  border-radius: $border-radius-base
  box-shadow: 3px 3px 5px rgba(0,0,0,0.2)

  &.in
    bottom: 20px

  &.success
    background: $primary-success-color

  &.error
    background: $primary-danger-color

  p
    color: #fff
